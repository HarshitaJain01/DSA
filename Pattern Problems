//n=5 Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    for(int i=1; i<=n; i++){
		for(int j=1; j<=i; j++){
			cout<<"*";
		}
		cout<<endl;
	}
	for(int i=1; i<=n-1; i++){
		for(int j=n-1; j>=i; j--){
			cout<<"*";
		}
		cout<<endl;
	}  
}
// Half Diamond
