#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    int z=(n*2)-1;
    for(int i=1; i<=n; i++){
        for(int j=1; j<i; j++){
            cout<<" ";
        }
        for(int k=1; k<=z; k++){
            cout<<"*";
        }
        z=z-2;
        cout<<endl;
    }
}
answer
*******
